body, html {
  min-height: 100%;
  -webkit-tap-highlight-color: transparent;
  background-color: #efeff4;
  color: #3d4145;
}

.swiper-container {
  .swiper-wrapper img {
    width: 100%;
    height: 10rem;

  }

}

.weui-photo-browser-modal {
  z-index: 99;
}

.price {
  color: #ff3b30;
  margin-left: -.1rem;
  padding-top: .1rem;

  span {
    font-size: .5rem;
  }
}

.good-des {
  margin-top: 0;
  font-size: .4rem;

  .weui-cell__bd {
    width: 80%
  }

  .weui-cell {
    padding: .2rem .2rem;
  }

  .good-title {
    width: 85%;
    word-wrap: break-word;
    word-break: normal;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }


  .title-box {
    position: relative;
  }


  .share-icon {
    position: absolute;
    top: -.2rem;
    right: 0;
    font-size: .3rem;
    margin-top: .1rem;
    color: #999;
    width: .7rem;
    height: .7rem;
    display: inline-block;
    background-image: url("../../img/share.svg");
    background-size: cover;
  }

  .share-icon:after {
    content: '分享';
    position: absolute;
    top: .7rem;
    display: inline-block;
    min-width: 1rem;
    //text-align: left;
  }

  .travel-price {
    padding-left: .1rem;
    font-size: .35rem;
    color: #999;
  }
}

.choose-box {
  .weui-cells {
    margin-top: .3rem;
  }

  .weui-cell {
    font-size: .4rem;
  }


}

#choose-box ,#choose-box-add{
  z-index: 501;
  a {
    position: relative;
  }

  .colors {
    span {
      margin-right: .1rem;
      border: 1px solid #ddd;
      padding: .1rem .3rem;
      border-radius: 3px;
      margin-bottom: 0.2rem;
      display: inline-block;
    }

    //border-top: 1px solid #e5e5e5;
    padding: 0 .3rem;
    margin: .3rem 0;
  }

  .weui-cells {
    color: #3d4145;
    font-size: .4rem;
  }

  .weui-media-box__title {
    font-size: .4rem;
    width: 90%;
  }

  .price span {
    font-size: .4rem;
  }

  .weui-cells:before {
    border: 0;
  }

  .weui-cells:after {
    border: 0;
  }

  .weui-count .weui-count__number {
    font-size: .4rem;
  }

  .num, .color-title {
    border-top: .5px solid #efefef;
  }

  .btn-box {
    height: 1.4rem;
    line-height: 1.4rem;
    margin-bottom: .5rem;
    margin-top: .1rem;
    text-align: center;
    font-size: .4rem;

    .buy-now {
      color: #fff;
      background-color: #04BE02;
    }

    .add-cart {
      color: #04BE02;
      background-color: rgba(4, 190, 2, .2);
    }
  }

  .close {
    position: absolute;
    top: 0;
    right: .2rem;
    font-size: .3rem;
    margin-top: .1rem;
    color: #999;
    width: .7rem;
    height: .7rem;
    display: inline-block;
    background-image: url("../../img/close.svg");
    background-size: cover;

  }

  .weui-media-box_appmsg .weui-media-box__hd {
    width: 2rem;
    height: 2rem;
  }

  .color-choosed {
    color: #fff;
    background-color: #04BE02;
    border: 0 !important;
  }
  .add-cart-sure {
    background: #04BE02;
    color: #fff;
    margin: 0 1rem;
    height: 1.1rem;
    border-radius: 5px;
    line-height: 1.1rem;
  }
}

.footer-btn {
  .add-cart, .buy-now {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    padding-left: .4rem !important;
    padding-right: .4rem !important;
  }
  .buy-now {
    background-color: #04BE02;
    p {
      color: #fff;
      font-size: .4rem;
    }
  }
  .add-cart {
    p {
      color: #04BE02;
      font-size: .4rem;
    }
    background-color: rgba(4, 190, 2, .2);
  }

  .weui-tabbar__item {
    padding: .2rem 0;
  }

}
.good-des-more {
  margin-bottom: 2rem;
  .weui-panel__hd {
    text-align: center;
  }
}
.weui-tabbar {
  position: fixed;
}
.weui-tabbar:before {
  border: 0 ;
}
