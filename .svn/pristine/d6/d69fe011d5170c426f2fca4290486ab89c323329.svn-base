body, html {
  height: 100%;
  -webkit-tap-highlight-color: transparent;
  background-color: #efeff4;
}

.swiper-wrapper img {
  width: 100%;
  height: 5rem;
}

.newproduct {
  .good_pic {
    width: 100%;
    height: 4rem;
  }

  .weui-media-box__title {
    font-size: .4rem;
  }

  .weui-media-box__desc {
    font-size: .3rem;
  }

  .weui-panel {
    padding-bottom: 2rem;
  }

  .newproduct_more {
    border-bottom: 1px solid #E5E5E5;
  }
}

.price {
  margin-top: .2rem;
  font-size: .4rem !important;
  color: #ff3b30;

  .delete {
    margin-left: .3rem;
    text-decoration: line-through;
    color: #999
  }
}

.hotproduct {
  margin-bottom: 2rem;

  .pic-box {
    p {
      word-wrap: break-word;
      word-break: normal;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2; /*超出2行显示省略号*/
      overflow: hidden;
      text-align: left;
    }

    img {
      width: 95%;
    }

    .weui-flex__item {
      float: left;
      margin-bottom: .3rem;
      text-align: center;
      width: 50%;
    }
  }

  .hot {
    color: #F76260;
    float: right;
    display: flex;
    align-items: center;
  }

  .hot::before {
    content: '';
    width: .4rem;
    height: .4rem;
    display: inline-block;
    background-image: url(../img/fire.svg);
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
    vertical-align: middle;
  }

  .hotproduct_more {
    border-bottom: 1px solid #E5E5E5;
  }

  .item-box {
    border: 1px solid #efeff4;
    margin: -.3rem .1rem .1rem .1rem;
    border-top: 0;
    padding: .3rem .2rem;
    border-bottom-right-radius: 4px;
    border-bottom-left-radius: 4px;
  }

  .weui-media-box:before {
    height: 0;
    border: 0;
  }
}

.weui-cell__bd {
  color: #2c2c2c;
}

.swiper-container {
  margin: 0 .2rem;
}

.main-box {
  position: relative;

  .cart-box {
    position: fixed;
    right: .2rem;
    bottom: 2rem;
    img {
      width: 1.2rem;
      height: 1.2rem;
    }
  }
}
